{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": ["src/**/*", "tests/**/*"],
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "types"],
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["esnext"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "types": ["node"],
    "removeComments": true,
    "noImplicitAny": false
  }
}
